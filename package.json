{
  "name": "courses-service",
  "version": "1.0.0",
  "main": "dist/main.js",
  "scripts": {
    "dev": "nodemon --ext ts --exec ts-node src/main.ts",
    "build": "tsc",
    "start": "node dist/main.js",
    "test:setup": "docker compose -f docker-compose.test.yml up -d",
    "test:wait-db": "for i in `seq 1 20`; do docker exec cursos-db-test mysqladmin ping -h localhost -ptestpassword --silent > /dev/null 2>&1 && echo 'MySQL is ready.' && break || { echo 'Waiting for MySQL...'; sleep 10; }; done; docker exec cursos-db-test mysqladmin ping -h localhost -ptestpassword --silent || { echo 'MySQL not ready after multiple attempts'; exit 1; }",
    "test:migrate": "dotenv -e .env.test -- prisma migrate deploy",
    "seed:test": "dotenv -e .env.test -- ts-node prisma/seed.ts",
    "test:run": "dotenv -e .env.test -- jest",
    "test:teardown": "docker compose -f docker-compose.test.yml down -v",
    "test": "npm run test:setup && npm run test:wait-db && sleep 5 && npm run test:migrate && npm run seed:test && npm run test:run",
    "lint": "eslint \"**/*.ts\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ClassConnect-GRUPO02/courses-service.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ClassConnect-GRUPO02/courses-service/issues"
  },
  "homepage": "https://github.com/ClassConnect-GRUPO02/courses-service#readme",
  "description": "",
  "dependencies": {
    "@prisma/client": "^6.5.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^5.1.0",
    "http-status-codes": "^2.3.0",
    "jsonwebtoken": "^9.0.2",
    "openai": "^4.98.0",
    "prisma": "^6.5.0",
    "uuid": "^11.1.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.24.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.30.1",
    "@typescript-eslint/parser": "^8.30.1",
    "dotenv-cli": "^8.0.0",
    "eslint": "^9.24.0",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "supertest": "^7.1.0",
    "ts-jest": "^29.3.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.30.1"
  }
}
